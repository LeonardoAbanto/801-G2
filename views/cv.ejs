<!doctype html>
<html>
  <head>
    <title>Gotitas de Lluvia</title>
    <link rel="stylesheet" href="styles/index.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  </head>
  <body id="body">
    <!-- encabezado -->
    <header id="header" class="container-fluid row pt-4 pb-2 mb-2">
      <div class="col-1"></div>
      <div class="col-3 pl-4 ml-4">
        <h1 class="">Gotitas de Lluvia</h1>
      </div>
      <div class="col-6 d-flex justify-content-end">
        <a href="/" type="button" class="btn btn-secondary ml-2">Inicio</a>
        <% if(rol!="Empleador") { %><a href="/ofertas" type="button" class="btn btn-secondary ml-2">Ofertas Laborales</a><% } %>
        <% if(rol=="Estudiante") { %><a href="/miperfil" type="button" class="btn btn-secondary ml-2">Editar Perfil</a><% } %>
        <% if(rol=="Empleador") { %><a href="" type="button" class="btn btn-secondary ml-2">Prospectos</a><% } %>
        <% if(rol=="Empleador") { %><a href="" type="button" class="btn btn-secondary ml-2">Subir Oferta</a><% } %>        
        <a href="/logout" class="btn btn-secondary ml-2">Logout</a>
      </div>
    </header>
    <!-- cuerpo -->
    <div class="container" id="box">
        <h2>CV de <%= usuarioPerfil.nombres %> <%= usuarioPerfil.apellidos %></h2>
        <% if(usuarioPerfil.especialidad!=null) { %> <h6>Especialidad: <%= usuarioPerfil.especialidad %></h6> <% } %>
        <div>
            <img src="<%= usuarioPerfil.cv %>" alt="CV no encontrado." class="img-thumbnail">
        </div>
        <a href="/perfil/<%= usuarioPerfil.id_usuario %>" type="button" class="btn btn-secondary ml-2 mt-2 mb-4">Volver al perfil</a>
    </div>
  </body>
</html>