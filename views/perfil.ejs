<!doctype html>
<html>
  <head>
    <title>Gotitas de Lluvia</title>
    <link rel="stylesheet" href="styles/index.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  </head>
  <body id="body">
    <!-- encabezado -->
    <header id="header" class="container-fluid row pt-4 pb-2 mb-2">
      <div class="col-1"></div>
      <div class="col-3 pl-4 ml-4">
        <h1 class="">Gotitas de Lluvia</h1>
      </div>
      <div class="col-6 d-flex justify-content-end">
        <a href="/" type="button" class="btn btn-secondary ml-2">Inicio</a>
        <% if(rol!="Empleador") { %><a href="/ofertas" type="button" class="btn btn-secondary ml-2">Ofertas Laborales</a><% } %>
        <% if(rol=="Estudiante") { %><a href="/subircv" type="button" class="btn btn-secondary ml-2">Subir CV</a><% } %>
        <% if(rol=="Empleador") { %><a href="" type="button" class="btn btn-secondary ml-2">Prospectos</a><% } %>
        <% if(rol=="Empleador") { %><a href="" type="button" class="btn btn-secondary ml-2">Subir Oferta</a><% } %>        
        <a href="/logout" class="btn btn-secondary ml-2">Logout</a>
      </div>
    </header>
    <!-- cuerpo -->
    <div class="container" id="box">
        <h2>Ver Perfil</h2>
        <div class="row">
            <!-- columna de foto -->
            <div class="col-4">
                <img src="../media/UserPicture.png" alt="img" class="img-thumbnail">
                
            </div>
            <!-- columna de informacion -->
            <div class="col-8">
                <h4>Nombre del usuario:, <%= usuarioPerfil.nombres %> <%= usuarioPerfil.apellidos %></h4>
                <h6>ID: <%= usuarioPerfil.id_usuario %></h6>
                <h6>Rol: <%= usuarioPerfil.rol %></h6>
                <% if(usuarioPerfil.especialidad!=null) { %> <h6>Especialidad: <%= usuarioPerfil.especialidad %></h6> <% } %>
                <a href="/cv/<%=usuarioPerfil.id_usuario%>" type="button" class="btn btn-secondary ml-2">Ver CV</a>
                <a href="/redes/<%=usuarioPerfil.id_usuario%>" type="button" class="btn btn-secondary ml-2">Ver Redes</a>
            </div>
      </div>
    </div>
  </body>
</html>