<!doctype html>
<html>
  <head>
    <title>Gotitas de Lluvia</title>
    <link rel="stylesheet" href="styles/index.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  </head>
  <body id="body">
    <!-- encabezado -->
    <header id="header" class="container-fluid row pt-4 pb-2 mb-2">
      <div class="col-1"></div>
      <div class="col-3 pl-4 ml-4">
        <h1 class="">Gotitas de Lluvia</h1>
      </div>
      <div class="col-6 d-flex justify-content-end">
        <a href="/" type="button" class="btn btn-secondary ml-2">Inicio</a>
        <% if(rol!="Empleador") { %><a href="/ofertas" type="button" class="btn btn-secondary ml-2">Ofertas Laborales</a><% } %>
        <% if(rol=="Estudiante") { %><a href="/subircv" type="button" class="btn btn-secondary ml-2">Subir CV</a><% } %>
        <% if(rol=="Empleador") { %><a href="" type="button" class="btn btn-secondary ml-2">Prospectos</a><% } %>
        <% if(rol=="Empleador") { %><a href="" type="button" class="btn btn-secondary ml-2">Subir Oferta</a><% } %>        
        <a href="/logout" class="btn btn-secondary ml-2">Logout</a>
      </div>
    </header>
    <!-- cuerpo -->
    <div class="container" id="box">
      <div class="row">
        <!-- columna de usuario -->
        <div class="col-4">
          <p><%= usuario.id_usuario %></p>
          <p><%= usuario.nombres %> <%= usuario.apellidos %></p>
          <p>Rol: <%= rol %></p>
          
        </div>
        <!-- columna de ofertas -->
        <div class="col-8">
          <p>This is an example paragraph. Anything in the <strong>body</strong> tag will appear on the page, just like this <strong>p</strong> tag and its contents.</p>
          <% publis.forEach((p) => { %>
            <div class="publicacion container mb-4">
              <div class="usuario"><%= p.texto %></div>
              <div class="usuario">publicado por <%= p.id_usuario %></div>
              <div class="fecha">fecha: <%= p.fecha %></div>
              <div class="puesto">fecha: <%= p.puesto %></div>
              <div class="nombre_empresa">nombre empresa: <%= p.nombre_empresa %></div>
              <% if(rol=="admin") { %> <button class="btn btn-primary mb-2">Eliminar</button><% } %>
            </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>